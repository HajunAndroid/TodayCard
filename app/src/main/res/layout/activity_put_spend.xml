<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PutSpend"
    android:background="#ffffff"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:onClick="btnClose"
            android:src="@drawable/baseline_close_black_24dp" />

        <ImageButton
            android:id="@+id/done"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:onClick="btnDone"
            android:src="@drawable/baseline_done_black_24dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <TextView
            android:id="@+id/where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용처"
            android:textSize="25dp"
            android:layout_marginLeft="70dp"/>
        <EditText
            android:id="@+id/spendWhere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:backgroundTint="#000000"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_alignBaseline="@+id/where"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/howMuch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="사용금액"
            android:layout_marginLeft="70dp"/>

        <EditText
            android:id="@+id/spendHowMuch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/howMuch"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:text=""
            android:backgroundTint="#000000"
            android:textColor="#000000"
            android:textSize="25dp"
            android:inputType="number">
        </EditText>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/when"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="사용일"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/spendWhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/when"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:textColor="#000000"
            android:text=""
            android:textSize="25dp">
        </TextView>

        <ImageButton
            android:id="@+id/selectDay"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:onClick="selectDay"
            android:src="@drawable/baseline_calendar_today_black_24dp" />
    </RelativeLayout>
</LinearLayout>